<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Web odca</title>
  </head>
  <body>
    <input type="file" id="chooseFile" accept=".csv" />

    <script>
      document.querySelector("#chooseFile")
        .addEventListener("change", (e) => {

          const xhr = new XMLHttpRequest();
          const fd = new FormData();
          const file = e.target.files[0];
          fd.append('file', file);

          xhr.open('POST', '/', true);
          xhr.onload = () => {
            if (xhr.status === 200) {
              window.history.pushState("", "", xhr.responseURL);
              window.location.replace(xhr.responseURL);
            }
          };
          xhr.send(fd);
        });
    </script>
  </body>
</html>

